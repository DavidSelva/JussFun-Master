<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".ui.FullScreenImageViewActivity">

    <include
        android:id="@+id/toolBarLay"
        layout="@layout/activity_toolbar_transparent" />

    <com.ravikoradiya.zoomableimageview.ZoomableImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ivFullScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBarLay" />

</androidx.constraintlayout.widget.ConstraintLayout>