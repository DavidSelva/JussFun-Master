<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/contentLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/side_nav_bar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/dimenImage"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_diamond_yellow"
                            app:riv_oval="true" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtTitle"
                            style="@style/TextWhiteRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="@string/free_gems"
                            android:textAllCaps="true"
                            android:textSize="@dimen/text_header" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtDescription"
                            style="@style/TextWhiteLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/congratulations_you_got"
                            android:textSize="@dimen/text_medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_gift_yellow"
                            app:riv_oval="true" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextWhiteRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="GIFTS to GEMS"
                            android:textSize="@dimen/text_header" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextWhiteLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/gifts_description"
                            android:textSize="@dimen/text_medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/cash"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_cash_green"
                            app:riv_oval="true" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextWhiteRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="GEMS to MONEY"
                            android:textSize="@dimen/text_header" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextWhiteLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="@string/convert_money_description"
                            android:textSize="@dimen/text_medium" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnOkay"
                        style="@style/ButtonWhiteLight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/rounded_solid_white"
                        android:backgroundTint="@color/colorWhiteText"
                        android:elevation="0dp"
                        android:text="@string/okay"
                        android:textColor="@color/colorSecondaryTexts" />

                </LinearLayout>

            </FrameLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>