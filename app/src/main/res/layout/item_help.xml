<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemLay"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iconHelp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/help_g" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtHelpTitle"
        style="@style/TextPrimaryLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textAlignment="viewStart"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iconHelp"
        android:textSize="@dimen/text_medium" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignStart="@+id/txtHelpTitle"
        android:layout_alignBottom="@+id/iconHelp"
        android:background="@color/colorDivider"
        />

</RelativeLayout>