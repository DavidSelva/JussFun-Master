<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_bg"
    android:id="@+id/renewalLay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/renewalBgLay"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextWhiteLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/expired"
                android:textAlignment="viewStart"
                android:id="@+id/txtRenewalTitle"
                android:padding="5dp"
                android:text="@string/expired"
                android:textSize="@dimen/text_normal" />


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextWhiteLight"
                android:id="@+id/txtRenewalDes"
                android:textAlignment="viewStart"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_membership"
                android:textSize="@dimen/text_medium" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRenewal"
                style="@style/TextWhiteRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_subscribe_bg"
                android:gravity="center_vertical"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:paddingStart="25dp"
                android:paddingTop="10dp"
                android:paddingEnd="25dp"
                android:paddingBottom="10dp"
                android:text="@string/renewal"
                android:textAllCaps="false"
                android:elevation="0dp"
                android:textColor="@color/btn_subscribe_text"
                android:textSize="@dimen/text_normal" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>