    </style>

    <style name="ButtonPrimaryLight" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/font_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_bg_primary</item>
