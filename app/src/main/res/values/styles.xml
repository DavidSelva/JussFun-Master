    <style name="ButtonPrimaryBold" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_bg_primary</item>
        <item name="android:textColor">@color/colorWhiteText</item>
