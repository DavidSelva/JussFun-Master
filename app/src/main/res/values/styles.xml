    <style name="TextSecondaryRegular" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="EditTextPrimaryLight" parent="Base.Widget.MaterialComponents.TextInputEditText">
        <item name="android:fontFamily">@font/font_light</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
